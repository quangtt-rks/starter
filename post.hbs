{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<main class="site-main wow fadeIn" data-wow-duration=".8s" role="main">

  {{! Everything inside the #post tags pulls data from the post }}
  {{#post}}

    <article class="{{post_class}}">
      <header class="post-header">
        <h1>{{title}}</h1>
        <div class="post-meta">
          <time datetime="{{date format='YYYY-MM-DD'}}"><b>Viết vào: </b> {{date format="YYYY-MM-DD H:mm"}}</time>
          <div class="tags">
            {{#foreach tags}}
                <a href="{{url}}">#{{name}}</a>
            {{/foreach}}
          </div>
        </div>
      </header>

      <section class="post-content">
        {{content}}
      </section>
    </article>

    <section class="read-next-story">
      <div class="row">

        <div class="column">
          {{#prev_post}}
            <div class="prev">
              <p>Đọc nữa</p>
              <h3><a href="{{url}}">{{title}}</a></h3>
            </div>
          {{/prev_post}}
        </div>

        <div class="column">
          {{#next_post}}
            <div class="next">
              <p>Đọc mãi</p>
              <h3><a href="{{url}}">{{title}}</a></h3>
            </div>
          {{/next_post}}
        </div>

      </div>
    </section>

    {{> widget-share}}

    {{! The tag below includes comments - partials/comments.hbs }}
    {{> comments}}

  {{/post}}

</main>
