      &nbsp;|&nbsp;
      <div class="footer-navigation">
          <ul>
              <li>
                  {{#if @labs.subscribers}}
                      <a class="subscribe" href="{{@site.url}}/subscribe/">{{t "Subscribe"}}</a>
